@using PayrollApp.Areas.HRPayroll.Models.ViewModels.PayrollSpecialist
@model Add


<div class="main-menu">
    <header class="header">
        <a href="@Url.Action("UserIndex","Admin")" class="logo">Payroll</a>
        <button type="button" class="button-close fa fa-times js__menu_close"></button>
    </header>
    <div class="content">
        <div class="navigation">
            <ul class="menu js__accordion">
                <li class="current">
                    <a class="waves-effect" href="@Url.Action("EmployeeIndex","PayrollSpecialist")"><i class="menu-icon fas fa-coins"></i><span>Employee Pay</span></a>
                </li>
                <li>
                    <a class="waves-effect" href="@Url.Action("EmployeeIndexInfo","PayrollSpecialist")"><i class="menu-icon far fa-user"></i><span>Employee</span></a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="fixed-navbar">
    <div class="pull-left">
        <button type="button" class="menu-mobile-button glyphicon glyphicon-menu-hamburger js__menu_mobile"></button>
        <h1 class="page-title">Employees</h1>
    </div>
    <div class="pull-right">
        <div class="ico-item">
            <a href="#" class="ico-item fa fa-search js__toggle_open" data-target="#searchform-header"></a>
            <div id="searchform-header" class="searchform js__toggle employeeSearchForm"><input type="search" placeholder="Search..." class="input-search" id="employeeSearch"><button onclick="asdFunc()" class="fa fa-search button-search" type="button"></button></div>
        </div>
        <div class="ico-item"><label>Payroll Specialist</label></div>
        <div class="ico-item"><a href="@Url.Action("Signout","Account")"><p style="font-size:smaller">Log Out  <i class="fas fa-sign-out-alt"></i></p></a></div>
    </div>
</div>
<div id="wrapper">
    <div class="main-content">
        <div>
            <form id="payment">
                <table id="example" class="display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Father Name</th>
                            <th>Department</th>
                            <th>Company</th>
                            <th>Position</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.EmployeePays)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Fathername</td>
                                <td>@item.Position.Company.Department.Name</td>
                                <td>@item.Position.Company.Name</td>
                                <td>@item.Position.Name</td>
                                <td><input type="checkbox" id="Check_@item.Id" checked="@item.IsChecked"></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a id="calcu" class="btn btn-info" onclick="Save()">Calc</a>
            </form>
        </div>
    </div>
</div>






